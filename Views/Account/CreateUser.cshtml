@model RegisterUserViewModel
<form method="post">
  <div class="form-group">
    <div class="form-group col-md-6">
      <label asp-for="Email"></label>
      <input type="email" class="form-control" asp-for="Email" placeholder="Email">
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Password"></label>
      <input type="password"  class="form-control" asp-for="Password" placeholder="Password">
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="PhoneNumber"></label>
      <input type="phone" class="form-control" asp-for="PhoneNumber" placeholder="PhoneNumber">
      <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
  </div>
  <div asp-validation-summary="All"></div>
  <button type="submit" class="btn btn-primary" asp-controller="Account" 
  asp-action="CreateUser">Sign in</button>
</form>