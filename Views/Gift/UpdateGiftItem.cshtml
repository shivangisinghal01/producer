@model GiftItemViewModel
<form method="post" enctype="multipart/form-data" >
<div>
    <div class="form-group">
     <input hidden asp-for="Id"/>   
    <input hidden asp-for="giftItemDetails.GiftItemId"/>
    <input hidden asp-for="giftItemDetails.GiftItemDetailID"/>
    </div>
    <div class="form-group col-md-6">
<label asp-for="Name"></label>
    <input type="text" asp-for="Name"/>
    </div>
    <div class="form-group col-md-6">
<label asp-for="InStock"></label>
    <input type="text" asp-for="InStock"/>
    </div>
    <div class="form-group col-md-6">
 <label asp-for="giftItemDetails.Price"></label>
    <input type="text" asp-for="giftItemDetails.Price"/>
    </div>
   <div class="form-group col-md-6">
     <label asp-for="giftItemDetails.Manufacturer"></label>
    <input type="text" asp-for="giftItemDetails.Manufacturer"/>
   </div>
   <div class="form-group">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="file" asp-for="Photo" class="form-control custom-file-input">
            </div>
        </div>
    </div>
    @{
 var photoPath = "~/images/" + (Model.ExistingPhoto ?? "noimage"); 
        <img src="@photoPath" asp-append-version="true" class="card-image-top" style="height: 200px; width: 100%; display: block; "/>
    }
   <div class="form-group col-md-6">
    <button type="submit" asp-controller="Gift" asp-action="UpdateGiftItem"
    >Update</button>
   </div>
</div>
</form>
