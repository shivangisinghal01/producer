@model GiftItemViewModel
<h1>Create New</h1>
<form method="post" enctype="multipart/form-data">
   <div>
    <div class="form-group">
<label asp-for="Name"></label>
    <input type="text" asp-for="Name"/>
    </div>
    <div class="form-group">
<label asp-for="InStock"></label>
    <input type="checkbox" asp-for="InStock"/>
    </div>
    <div class="form-group">
 <label asp-for="giftItemDetails.Price"></label>
    <input type="text" asp-for="giftItemDetails.Price"/>
    </div>
   <div class="form-group">
     <label asp-for="giftItemDetails.Manufacturer"></label>
    <input type="text" asp-for="giftItemDetails.Manufacturer"/>
   </div>
   <div class="form-group">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="file" asp-for="Photo" class="form-control custom-file-input">
            </div>
        </div>
    </div>
   <div class="form-group">
    <button type="submit" asp-controller="Gift" asp-action="Create"
    >Create</button>
   </div>
</div>
</form>